{% extends 'base.html.twig' %}

{% block title %}Bennes solidaires - Connexion{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href={{ asset('css/header.css') }}>
<link rel="stylesheet" href={{ asset('css/login.css') }}>
{% endblock %}


{% block body %}

    {% include 'partials/header.html.twig' %}

            <div class="container" id="container">
                <h1>CONNEXION</h1>
                    <form action={{ path('app_login')}} method="post">
                        {% if error %}
                            <div class="alert alert-danger">Il y a une erreur.</div>
                        {% endif %}

                        <label for="identifier">Identifiant</label>
                        <input type="text" value="{{ last_identifier }}" name="identifier" id="identifier"  autocomplete="identifier" placeholder="Votre identifiant" required autofocus>

                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_identifier }}" name="email" id="email" autocomplete="email" placeholder="Votre adresse email" required autofocus>

                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" autocomplete="current-password" placeholder="Votre mot de passe" required>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">

                        <div class="foot_form">
                            <input type="submit" value="Valider">
                            <a href={{ path('app_register') }}>Envie de nous rejoindre ?</a>
                            <a href={{ path('app_register') }}>Cr√©er un compte</a>
                        </div>
                    </form>
                
            </div>
            {% endblock %}

{% block javascripts %}
<script src={{ asset('js/overall-no-scrolling.js') }}></script>
{% endblock %}
