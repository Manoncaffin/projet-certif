{% extends 'base.html.twig' %}

{% block title %}Bennes solidaires - Connexion{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href={{ asset('css/login.css') }}>
{% endblock %}


{% block body %}

    {% include 'partials/header.html.twig' %}

            <div class="container" id="container">
                <h1>CONNEXION</h1>
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {# DÉPLACER DANS LE HEADER #}
                        {# {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %} #}
                        {# DÉPLACER DANS LE HEADER #}

                        <label for="identifier">Identifiant</label>
                        <input type="text" value="{{ last_username }}" name="identifier" id="identifier" class="form-control" autocomplete="identifier" placeholder="Votre identifiant" required autofocus>

                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" placeholder="Votre adresse email" required autofocus>

                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Votre mot de passe" required>
                        <a href="#">Mot de passe oublié ?</a>

                        {# ÇA SERT À QUOI ? #}
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me" id="remember_me">Se souvenir de moi
                            </label>
                        </div>

                        <div class="foot_form">
                            <input type="submit" value="Valider">
                            <a href={{ path('app_register') }}>Envie de nous rejoindre ?</a>
                            <a href={{ path('app_register') }}>Créer un compte</a>
                        </div>
                    </form>
                
            </div>
            {% endblock %}

{% block javascripts %}
<script src={{ asset('js/overall-no-scrolling.js') }}></script>
{% endblock %}
