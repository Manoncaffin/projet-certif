{% extends 'base.html.twig' %}

{% block title %}Bennes solidaires - Messagerie{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href={{ asset('css/header.css') }}>
<link rel="stylesheet" href={{ asset('css/messagerie.css') }}>
{% endblock %}


{% block body %}

    {% include 'partials/header.html.twig' %}

    <section class="all_container">

            <div class="container_one">
                <div class="description_announce">
                    <div class="img_announce">
                    {% if announce.photo|length > 0 %}
                        {% set firstPhoto = announce.photo|first %}
                        <img src="{{ asset('uploads/photos/' ~ firstPhoto.url) }}" alt="Photo annonce">
                    {% else %}
                        <p>Aucune photo disponible.</p>
                    {% endif %}
                </div>

                <div class="text_announce">
                    <p><span>{{ announce.material }}</span></p>
                    <p>{{ announce.createdAt | date('d/m/Y') }}</p>
                    <a href="{{ path('app_annonce_detail', { id: announce.id }) }}" class="look_announce">Voir l'annonce</a>
                </div>

                    <div class="icons_announce">
                        <!-- FONCTION DELETE -->
                        <a href=""><i class="fa-solid fa-trash"></i></a>
                        <a href="{{ path('app_messagerie_show', { id: announce.id }) }}"><i class="fa-regular fa-message"></i></a>
                    </div>
                </div>
            </div>
            <div class="scrollbar" id="style-1">
                <div class="force-overflow"></div>
            </div>

            <div class="container">
            <div class="message_user_one">
                <img src={{ asset('images/BS.webp') }} class="avatar">
                <div class="bubble_one">
                    <p>Bonjour Barnabé,
                        Je suis intéressée par vos bottes de paille, pouvez-vous me communiquer vos disponibilités pour
                        venir les récupérer ?</p>
                </div>
                <div class="datetime pt-3 px-5">LE 06 MAI À 10h12</div>
            </div>

            <div class="message_user_two">
                <img src={{ asset('images/BS.webp') }} class="avatar">
                <div class="bubble_two">
                    <p>Bonjour Samia, je suis disponible tous les jours à partir de 18h, possible pour vous ?</p>
                </div>
                <div class="datetime pt-3 px-5">LE 06 MAI À 13h10</div>
            </div>

            <footer class="message-input">
                <textarea id="message" placeholder="Entrer le message ici"></textarea>
                <i class="fa-regular fa-paper-plane"></i>
            </footer>
        </div>
            
            
        </section>

{% endblock %}

{% block javascripts %}
    <script src={{ asset('js/overall-no-scrolling.js') }}></script>
    <script src={{ asset('js/back.js') }}></script>
    <script src={{ asset('js/messagerie.js') }}></script>
{% endblock %}
