<form action="{{ path('app_user_delete', {'id': user.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr·e de vouloir supprimer votre compte ?')">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit" class="btn-unstyled underline-animation">Supprimer mon compte</button>
</form>